<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="box">
        <h1>
          <%= @cocktail.name %>
        </h1>
        <% if @cocktail.photo? %>
          <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
        <% else %>
          <%= image_tag 'http://static1.villaschweppes.com/articles/4/32/01/4/@/220589-trois-des-cocktails-moleculaires-du-bar-article_top-3.jpg', :class => 'img-medium' %>

        <% end %>
        <ul>
          <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.ingredient.name %>
            <%= dose.description %>
          </li>
            <% end %>
        </ul>
        <%= link_to 'Add an dose', new_cocktail_dose_path(@cocktail), {class: 'btn-small'} %>
        <%= link_to 'Back to list', cocktails_path, {class: 'btn-small'} %>
      </div>
    </div>
  </div>
</div>
