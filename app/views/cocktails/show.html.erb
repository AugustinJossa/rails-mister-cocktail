<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="box">
        <h1>
          <%= @cocktail.name %>
        </h1>
        <ul>
          <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.ingredient.name %>
            <%= dose.description %>

          </li>
            <% end %>
        </ul>
        <%= link_to 'Add an dose', new_cocktail_dose_path(@cocktail) %>
        <%= link_to 'Back to list', cocktails_path %>
      </div>
    </div>
  </div>
</div>
